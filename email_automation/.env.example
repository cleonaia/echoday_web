# Echoday Email Automation System - Environment Variables
# Copy this file to .env and fill in your actual values

# SMTP Email Configuration (Required)
SMTP_PASSWORD=your_email_app_password_here
# For Gmail: Use App Password, not your regular password
# Go to: Google Account > Security > 2-Step Verification > App passwords

# Google Maps API (Optional but recommended)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Geocoding API, Maps JavaScript API

# LinkedIn API (Optional)
LINKEDIN_API_KEY=your_linkedin_api_key_here
# Get from: https://developer.linkedin.com/

# Email Service Providers (Optional)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
# Get from: https://mailchimp.com/developer/

INSTANTLY_API_KEY=your_instantly_api_key_here
# Get from: https://instantly.ai/

# WhatsApp Business API (Future integration)
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Database Configuration (Optional - uses SQLite by default)
DATABASE_URL=sqlite:///email_automation/data/outreach_log.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=email_automation/data/automation.log

# Rate Limiting (Optional - adjust based on your email provider)
DAILY_EMAIL_LIMIT=500
BATCH_SIZE=50
DELAY_BETWEEN_BATCHES=60

# Security and Compliance
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
BACKUP_ENCRYPTION=true

# Monitoring and Alerts (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_for_alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# External Services (Optional)
OPENAI_API_KEY=your_openai_api_key_for_enhanced_personalization
CLAUDE_API_KEY=your_claude_api_key_for_ai_assistance

# Development/Testing Mode
DEBUG_MODE=false
TEST_EMAIL_RECIPIENT=your_test_email@example.com
DRY_RUN=false

# Proxy Configuration (Optional)
USE_PROXY=false
PROXY_URL=your_proxy_url_here
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Geographic Configuration
DEFAULT_COUNTRY=Spain
DEFAULT_LANGUAGE=es
TIMEZONE=Europe/Madrid

# Business Configuration
COMPANY_NAME=Echoday
COMPANY_WEBSITE=https://www.echoday.tech
COMPANY_ADDRESS="Av. Catalunya 123, 08208 Sabadell"
COMPANY_CIF=B12345678

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
FACEBOOK_PIXEL_ID=your_fb_pixel_id

# Backup Configuration
AUTO_BACKUP=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups/

# Performance Tuning
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
CACHE_ENABLED=true
CACHE_TTL=3600